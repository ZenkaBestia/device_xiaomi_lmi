allow vendor_init block_device:lnk_file setattr;

allow init property_type:file { append create getattr map open read relabelto rename setattr unlink write };

# Allow vendor_init to set persist_camera_prop
set_prop(vendor_init, vendor_persist_camera_prop)

# For mount tracefs tracefs /sys/kernel/tracing
allow init debugfs_tracing_debug:dir mounton;

# Allow init to read and write to vendor_sysfs_graphics
allow init vendor_sysfs_graphics:dir search;
allow init vendor_sysfs_graphics:file rw_file_perms;

allow init init:binder { call };
allow init init:netlink_kobject_uevent_socket { read };
allow init logcat_exec:file getattr;
allow vendor_init cache_file:dir { remove_name write search };
allow vendor_init cache_file:file unlink;
